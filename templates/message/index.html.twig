{% extends 'base.html.twig' %}

{% block body %}
    <h1>Messages du chat</h1>

    <div id="chat-box">
        {% for msg in messages %}
            <p><strong>{{ msg.user.username }}</strong> : {{ msg.message }}
            <small>({{ msg.createdAt|date('H:i:s') }})</small></p>
        {% else %}
            <p>Aucun message pour le moment.</p>
        {% endfor %}
    </div>

    <form id="chat-form" action="{{ path('chat_send_message') }}" method="post">
        <input type="text" name="message" placeholder="Votre message" required>
        <button type="submit">Envoyer</button>
    </form>
{% endblock %}
