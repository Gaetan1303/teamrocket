{% extends 'base.html.twig' %}

{% block title %}Mission {{ mission.titre }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"/>
    <link href="https://fonts.cdnfonts.com/css/pokemon-solid" rel="stylesheet">
    <style>
        :root { --team-color: {{ mission.team_color|default('#ef5350') }}; }
        html, body { margin:0; height:100%; background: radial-gradient(circle at top, var(--team-color) 0%, #000 90%); font-family:'Pokemon Solid', sans-serif; color:#fff; text-shadow:2px 2px #000; }
        h4 { text-align:center; font-size:2em; color:yellow; text-transform:uppercase; }
        #mission-block { background: rgba(255,255,255,0.1); border:2px solid var(--team-color); border-radius:12px; padding:16px; margin:20px; box-shadow:0 0 15px var(--team-color); }
        #map { height:60vh; border:3px solid var(--team-color); border-radius:12px; box-shadow:0 0 15px var(--team-color); }
        .captured-bar { background: rgba(0,0,0,0.5); padding:10px; border-radius:10px; margin-top:10px; }
        .pokemon-icon img { image-rendering: pixelated; }
    </style>
{% endblock %}

{% block body %}
    <div id="mission-block">
        <h4>{{ mission.titre }}</h4>
        <p style="text-align:center;">{{ mission.description }}</p>
        <small>
            <strong>Région :</strong> {{ mission.region|default('???') }} |
            <strong>Type ciblé :</strong> <span id="targetType">{{ mission.cible_type|default('inconnu') }}</span>
        </small>
    </div>

    <div id="game-area">
        <div id="map"></div>
        <div class="captured-bar" id="result"></div>
    </div>

    <script>
        const csrfToken = {{ csrf_token|default('')|json_encode|raw }};
        const targetType = {{ mission.cible_type|default('inconnu')|json_encode|raw }};
    </script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="{{ asset('js/game_first_theft.js') }}"></script>
{% endblock %}
